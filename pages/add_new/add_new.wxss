.search_input {
	width: 100%;
	height: 40px;
	background-color: #CFCFCF;
	display: flex;
	justify-content: center;
	align-items: center;
}

.search_input view {
	width: 92%;
	height: 30px;
	line-height: 40px;
	background-color: #ffffff;
	border-radius: 5px;
	display: flex;
	align-items: center;
	padding-left: 10px;
  flex-direction: row;
  margin-left:  2px;
	
}
.search_input input {
	font-size: 14px;
	width: 90%;
}
button {
	margin: 10px 2px 10px 5px;
	font-size: 12px;
}
