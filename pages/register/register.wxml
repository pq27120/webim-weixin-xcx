<view class="register">
	<view class="register_img">
		<image src="../../images/logo.png"></image>
	</view>
  <!-- 如果是医生注册，需要填写信息如下 -->
  <view wx:if='{{isDoctor === true}}'>
    <view class="register_user">
      <input type="text" placeholder="医生姓名" placeholder-style="color:rgb(173,185,193)" bindinput="bindUsername"/>
    </view>
    <view class="register_user">
      <input type="text" placeholder="所在医院" placeholder-style="color:rgb(173,185,193)" bindinput="bindUsername"/>
    </view>
    <view class="register_user">
      <input type="text" placeholder="所在科室" placeholder-style="color:rgb(173,185,193)" bindinput="bindUsername"/>
    </view>
    <view class="register_user">
      <input type="text" placeholder="医生等级" placeholder-style="color:rgb(173,185,193)" bindinput="bindUsername"/>
    </view>
  </view>

  <!-- 如果是患者注册，需要填写信息如下 -->
  <view wx:else>
    <view class="register_user">
      <input type="text" placeholder="病人姓名" placeholder-style="color:rgb(173,185,193)" bindinput="bindUsername"/>
    </view>
    <view class="register_user">
      <input type="text" placeholder="性别" placeholder-style="color:rgb(173,185,193)" bindinput="bindUsername"/>
    </view>
    <view class="register_user">
      <input type="text" placeholder="手机号码" placeholder-style="color:rgb(173,185,193)" bindinput="bindUsername"/>
    </view>
    <view class="register_user">
      <input type="text" placeholder="生日" placeholder-style="color:rgb(173,185,193)" bindinput="bindUsername"/>
    </view>  
  </view>
